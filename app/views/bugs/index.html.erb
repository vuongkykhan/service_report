<div class="row">
  <div class="col-12 col-lg-12">
    <div class="card card-table">
      <div class="card-header">
        <div class="title">每個人的總工作量</div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-lg-6">
            <div class="chart">
              <%= pie_chart @users.map { |user| [user.username, user.count_jobs] } %>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="chart">
              <%= column_chart @users.map { |user| [user.username, user.count_jobs] } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>

<div class="row">
  <div class="col-12 col-lg-12">
    <div class="card card-table">
      <div class="card-header">
        <div class="title">每項服務的總工作量</div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-lg-12">
            <div class="chart">
              <%= pie_chart @service_categories.each { |key, value| [key, value] } %>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="chart">
              <%= column_chart @service_categories.each { |key, value| [key, value] }, min: 100, height: "400px" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>
