


<div>
	<h3>Handler total jobs</h3>
	
	<%= column_chart @users.map { |user| [user.username, user.count_jobs] } %>

	<div class="table table-sm">
		<table class="table">
			<tr>
				<th>Username</th>
				<th>Total jobs</th>
			</tr>
			<% @users.each do |user| %>
				<% if user.count_jobs > 0 %>  
					<tr>
						<td>
							<%= user.username %>	
						</td>
						<td><%= user.count_jobs %></td>
					</tr>
				<% end %>
			<% end %>
		</table>
	</div>
</div>

<hr>

<div>
	<h3>Service total</h3>

	<%= line_chart @service_categories.each { |key, value| [key, value] } %>

	<div class="table table-bordered table-sm table-responsive">
		<table class="table">
			<tr>
				<th>Service Category</th>
				<th>Total</th>
			</tr>
			<% @service_categories.each do |key, value| %>
				<tr>
					<td><%= key %></td>
					<td><%= value %></td>
				</tr>
			<% end %>
		</table>
	</div>
</div>

